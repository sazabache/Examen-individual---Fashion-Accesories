include mixins
doctype
html
	head
		meta(charset="utf-8")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		title Home | Fashion Accesories
		link(href="css/bootstrap.min.css" rel="stylesheet")
		link(href="css/main.css" rel="stylesheet")
		link(href="font-awesome/css/font-awesome.min.css" rel="stylesheet" type="text/css")
	body
		include head
		section.bg-cont
			.container
				.row
					.col-md-6
						.hero-cont
							h2 CONTACT US
					.col-md-6
						.txt-cont
							.cont-especific
								p
									span Contact info
								p phone:0(1234) 567 890
								p Mail:Infor@roadthemes.com
								p Address : No 40 Baria Sreet 133/2 NewYork City, NY, United States.
		section
			.container
				.row
					.col-md-6
						iframe(src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d62429.25046115947!2d-77.08020489628143!3d-12.055342014088952!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9105c8db1e539667%3A0x4f45538aa07bda29!2sLima!5e0!3m2!1ses!2spe!4v1459369840349" width="600" height="450" frameborder="0" style="border:0" allowfullscreen>)
					.col-md-6
						form.contact-form
							span 
								+inputWithTextContent('First name')
							span
								+inputWithTextContent('Last name')
							span
								+inputWithTextContent('Email')
							span
								+inputWithTextContent('Website')
							span
								+inputWithTextContent('Subject')
							textarea(rows="10" cols="60"  placeholder="Message" name="message")
							input(type="submit" class="submit-btn button-link pull-right" value="send")
		include footer